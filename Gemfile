source 'https://rubygems.org'

# Specify your gem's dependencies in brcobranca.gemspec
gemspec

group :development do
  gem 'byebug', platform: :mri
  gem 'pry'
  gem 'rubocop'
  gem 'rubocop-rspec'
end

group :test do
  gem 'coveralls', require: false
  gem 'json', '>= 1.8', '< 3'
  gem 'simplecov'
  gem 'codeclimate-test-reporter', '~> 1.0.0'
  gem 'rspec'
  gem 'rake'
  gem 'timecop'
end
